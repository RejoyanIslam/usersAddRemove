    <script>

      $(".soro-data-table").DataTable();
      const uploadImg=document.querySelector('.upload-img');
      
      if(uploadImg){
        const preloadImg=document.getElementById('preload-img')
      const imageIcon=document.querySelector('.image-icon')
      uploadImg.onchange=(e)=>{
        const imgLink=URL.createObjectURL(e.target.files[0])
        preloadImg.setAttribute('src',imgLink)
        imageIcon.classList.add('d-none')

      }
      }

      const deleteBtn=document.querySelectorAll('.deleteBtn')
      if(deleteBtn){
        deleteBtn.forEach(element => {
          element.onclick=(e)=>{
            const msg= confirm('Are you want to delete ?')
            if(msg){
              return true
            }else{
              return false
            }
          }
        });
      }



//sms

 const smsSubmit=document.getElementById('smsSubmit')
    if(smsSubmit){
        smsSubmit.onclick=()=>{
          const inputValue=document.getElementById('inputValue').value
          const tokenValue=document.getElementById('smsTokenField').getAttribute('value')
          const showMassage=document.getElementById('showMassage')
          smsSubmit.setAttribute('data-bs-target','#massage')
          smsSubmit.setAttribute('data-bs-toggle','modal')
          
          if(Number(inputValue) == Number(tokenValue)){
            window.location.href=`/students/smsVerifyByToken/${inputValue}`
            showMassage.innerHTML=`Verify Completed`
            
          }else{
            showMassage.innerHTML=`Wrong Verification Code`
            console.log('no');
          }
          
    }
    }






    </script>
