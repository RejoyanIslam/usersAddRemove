<section class="my-5">
  <div class="row">
    <div class="col-md-5 m-auto">
      <a href="/students" class="btn btn-primary my-2">back</a>
      <div class="card">
        <div class="card-header">
          <h2>Add New Student</h2>
        </div>
        <div class="card-body">
          <form
            action="/students/createData"
            method="post"
            enctype="multipart/form-data"
          > 
            <div class="my-3">
              <label for="name">Name</label>
              <input
                type="text"
                name="name"
                id="name"
                class="form-control"
                autofocus
              />
            </div>
            <div class="my-3">
              <label for="email">Email</label>
              <input
                type="text"
                name="email"
                id="email"
                class="form-control"
                required
              />
            </div>
            <div class="my-3">
              <label for="phone">Phone</label>
              <input type="text" name="phone" id="phone" class="form-control" required placeholder="+33644626205" />
            </div>
            <div class="my-3">
              <label for="location">Location</label>
              <select
                name="location"
                id="location"
                class="form-control bg-secondary text-white text-center"
              >
                <option value="">-select-</option>
                <option value="dhaka">Dhaka</option>
                <option value="rajshahi">Rajshahi</option>
                <option value="rangpur">Rangpur</option>
                <option value="sylhet">Sylhet</option>
                <option value="khulna">Khulna</option>
              </select>
            </div>
            <div class="my-3">
              <label>Photo</label> <br />
              <input
                type="file"
                name="photo"
                class="d-none upload-img"
                id="photo"
              />
              <label
                for="photo"
                class="d-block pe-auto"
                style="cursor: pointer"
              >
                <img src="" alt="" id="preload-img" class="w-100" class="" />
                <br />
                <img
                src="https://thumbs.dreamstime.com/b/gallery-icon-vector-sign-symbol-isolated-white-background-your-web-mobile-app-design-logo-concept-133764279.jpg"
                alt=""/ class="image-icon d-block"></label
              >
            </div>
            <input
              type="submit"
              value="create"
              class="btn btn-primary w-100"
              class="form-control"
            />
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
